@using Entities;
@model List<Currency>



<style>
    table {
        width: 500px;
        margin: 0 auto;
        overflow: auto;
        margin: 0 auto;  }
</style>


<div class="row">
    <div class="col">
        <div style="height: 500px; overflow: auto;">
            @{
                <table class="table table-success table-striped">
                    @if (Model.Count > 0 && Model[0] != null)
                    {
                        <thead>
                            <tr>
                                <td style="position: sticky; top: 0;">No</td>
                                <td style="position: sticky; top: 0;">Döviz Kuru</td>
                                <td style="position: sticky; top: 0;">Alış Değeri</td>
                                <td style="position: sticky; top: 0;">Satış Değeri</td>
                                <td style="position: sticky; top: 0;">Oluşturulan Tarih</td>
                                <td style="position: sticky; top: 0;">Tcmb Tarih</td>
                            </tr>
                        </thead>
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            @if (item is null)
                            {
                                <div id="alert1" class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong>Uyarı </strong> Geçersiz bir değer girdiniz.
                                </div>
                            }
                            else
                            {
                                <td>@($"{item.CurrencyNameTr} ({item.CurrencyCode})")</td>
                                <td>@item.ForexBuying</td>
                                <td>@item.ForexSelling</td>
                                <td>@item.CreatedTime</td>
                                <td>@item.TcmbCurrencyDate</td>
                            }
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>